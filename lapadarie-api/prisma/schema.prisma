datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Order {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  client    String
  amount    Int
  delivered Boolean  @default(false)

  @@map("order")
}

model Product {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  price       Decimal
  description String

  @@map("product")
}
